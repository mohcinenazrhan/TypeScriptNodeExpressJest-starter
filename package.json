{
  "name": "TypeScriptNodeExpressJest-starter",
  "version": "1.0.0",
  "description": "A simple template to work with Node with Express using TypeScript and Jest for testing.",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "test-watch": "jest --verbose --watchAll",
    "dev": "tsc && concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/index.js\"",
    "start": "tsc && node dist/index.js"
  },
  "keywords": ["TypeScript","Node","Express","Jest"],
  "author": "mohcine nazrhan",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "express": "^4.18.2"
  }
}